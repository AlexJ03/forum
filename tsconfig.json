{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "paths": {
      // Alias
      "@helpers": ["./src/helpers"],
      "@mobx": ["./src/mobx"],
      "@firebase-config": ["./src/firebase"],
      "@utils": ["./src/utils"],
      "@types": ["./src/types"],
      "@pages": ["./src/pages"],
      "@data": ["./src/data"],

      // Components Alias
      "@components-discussions": ["./src/components/discussions"],
      "@components-categories": ["./src/components/categories"],
      "@components-auth": ["./src/components/auth"],
      "@components-answers": ["./src/components/answers"],
      "@components-modals": ["./src/components/modals"],
      "@components-nav": ["./src/components/nav"],
      "@components-profile": ["./src/components/profile"],
      "@components-questions": ["./src/components/questions"],
      "@components-users": ["./src/components/users"],
      "@components-toggle": ["./src/components/toggle"],
      "@components-snack": ["./src/components/snackbar"],
      "@components-progress": ["./src/components/progress"],

      // Global Css Alias
      "@global-css": ["./styles/global.css"]
    }
  }
}